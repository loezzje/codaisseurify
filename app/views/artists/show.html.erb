<div class="col-md-12">
  <img class="col-md-4">
  <%= image_tag @artist.photo.image.thumbnail %>
  <h1 class="col-md-8"><%= @artist.name %></h1>
</div>


<div class="col-md-12">
  <ul>
  <% @artist.songs.each do |song| %>
  <li>
    <%= song.name %>
  </li>
  <% end %>
</ul>
</div>



<%= link_to "Add song", new_artist_song_path(:artist_id), class: "btn btn-default" %>
